<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Add Doctors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .doctor-card {
            border: 1px solid #ccc;
            border-radius: 12px;
            padding: 16px;
            margin: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        #doctorForm {
            display: none;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-light bg-light">
  <a href="/dashboard2" class="nav-link">Home</a>
  <a href="/admin-dashboard" class="nav-link">Doctor</a>
</nav>
    <div class="container mt-4">
        <h2 class="mb-4">Admin Dashboard</h2>

        <!-- Add Doctor Button -->
        <button class="btn btn-primary" onclick="toggleForm()">Add Doctor</button>

        <!-- Doctor Form -->
        <form id="doctorForm" class="mt-4" method="POST" action="/add-doctor">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" name="name" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Specialization</label>
                <input type="text" name="specialization" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Phone</label>
                <input type="text" name="phone" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
<div class="row mt-5">
  <% doctors.forEach(doc => { %>
    <div class="col-md-4">
      <div class="doctor-card">
        <h5><%= doc.firstName %> <%= doc.lastName %></h5>
        <p><strong><%= doc.experience %> experience</strong></p>
        <p><strong>Expertise:</strong> <%= doc.expertise %></p>
        <p><strong>Description:</strong> <%= doc.description %></p>
        <button class="btn btn-info" onclick="location.href='/doctor/edit/<%= doc._id %>'">Edit</button>
      </div>
    </div>
  <% }) %>
</div>

    </div>

    <script>
        function toggleForm() {
            const form = document.getElementById('doctorForm');
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
        }
    </script>
</body>

</html>