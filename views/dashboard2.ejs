<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .profile-img {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 50%;
            margin-right: 10px;
        }

        .menu-card {
            cursor: pointer;
            transition: transform 0.2s;
            text-align: center;
        }

        .menu-card:hover {
            transform: scale(1.05);
        }

        .menu-icon {
            width: 80px;
            height: 80px;
            object-fit: contain;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/dashboard2">Home</a>
    <a class="nav-link" href="/admin-dashboard">Doctor</a>
    <button class="btn btn-outline-primary ms-auto" onclick="location.href='/admin-dashboard#add'">Add</button>
  </div>
</nav>


    <div class="container mt-5">
        <div class="row text-center">
            <!-- Doctor -->
            <div class="col-md-4 mb-4">
                <div class="card p-4 menu-card" onclick="location.href='/admin-dashboard'">
                    <img src="https://cdn-icons-png.flaticon.com/512/3774/3774299.png" alt="Doctor Icon" class="menu-icon">
                    <h5>Doctor</h5>
                </div>
            </div>
            <!-- Patient -->
            <div class="col-md-4 mb-4">
                <div class="card p-4 menu-card" onclick="location.href='/patient'">
                    <img src="https://cdn-icons-png.flaticon.com/512/4320/4320337.png" alt="Patient Icon" class="menu-icon">
                    <h5>Patient</h5>
                </div>
            </div>
            <!-- Appointment -->
            <div class="col-md-4 mb-4">
                <div class="card p-4 menu-card" onclick="location.href='/appointment'">
                    <img src="https://cdn-icons-png.flaticon.com/128/2693/2693507.png" alt="Appointment Icon" class="menu-icon">
                    <h5>Appointment</h5>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
