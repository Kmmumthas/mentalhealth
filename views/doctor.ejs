<!DOCTYPE html>
<html>
<head>
  <title>Edit Doctor</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
    .tab-content { margin-top: 20px; }
    .tab-pane { padding-top: 20px; }
  </style>
</head>
<body>
  <div class="container mt-5">
    <nav class="navbar navbar-light bg-light mb-4">
      <a href="/dashboard2" class="nav-link">Home</a>
      <a href="/admin-dashboard" class="nav-link">Doctor</a>
    </nav>

    <form method="POST" action="/doctor/edit/<%= doctor._id %>" enctype="multipart/form-data">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" data-bs-toggle="tab" href="#details">Details</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-bs-toggle="tab" href="#documents">Documents</a>
        </li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane fade show active" id="details">
          <div class="row mt-4">
            <div class="col-md-6">
              <label>Enter First name</label>
              <input type="text" name="firstName" class="form-control" value="<%= doctor.firstName %>" required />
            </div>
            <div class="col-md-6">
              <label>Enter Last name</label>
              <input type="text" name="lastName" class="form-control" value="<%= doctor.lastName %>" required />
            </div>
            <div class="col-md-6 mt-3">
              <label>Enter Experience</label>
              <input type="text" name="experience" class="form-control" value="<%= doctor.experience %>" required />
            </div>
            <div class="col-md-6 mt-3">
              <label>Select Expertise</label>
              <input type="text" name="expertise" class="form-control" value="<%= doctor.expertise %>" />
            </div>
            <div class="col-md-6 mt-3">
              <label>Enter Address</label>
              <textarea name="address" class="form-control"><%= doctor.address %></textarea>
            </div>
            <div class="col-md-6 mt-3">
              <label>Description</label>
              <textarea name="description" class="form-control"><%= doctor.description %></textarea>
            </div>
            <div class="col-md-6 mt-3">
              <label>Enter DOB</label>
             <input type="date" name="dob" class="form-control" value="<%= doctor.dob ? doctor.dob.toISOString().substring(0, 10) : '' %>" />

            </div>
          </div>
        </div>

        <div class="tab-pane fade" id="documents">
          <div class="mt-4">
            <label>Upload Profile</label>
            <input type="file" name="profile" class="form-control" />
          </div>
          <div class="mt-3">
            <label>Upload Academic Degree(s)</label>
            <input type="file" name="academicDocs" multiple class="form-control" />
          </div>
          <div class="mt-3">
            <label>Upload License and Certifications</label>
            <input type="file" name="licenseCerts" multiple class="form-control" />
          </div>
        </div>
      </div>

      <div class="mt-4 d-flex justify-content-end">
        <a href="/admin-dashboard" class="btn btn-outline-secondary me-2">Cancel</a>
        <button type="submit" class="btn btn-success">Save</button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
