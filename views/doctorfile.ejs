<!DOCTYPE html>
<html>
<head>
  <title>Doctor List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background: #f1faff;">
  <nav class="navbar navbar-light bg-light px-4">
    <a class="navbar-brand" href="/dashboard2">Home</a>
    <div class="d-flex">
      <button class="btn btn-outline-primary me-2">Add</button>
      <button class="btn btn-outline-secondary">Filter</button>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row">
      <% doctors.forEach(doc => { %>
        <div class="col-md-3 mb-4">
          <div class="card">
            <img src="/uploads/<%= doc.profile || 'default.png' %>" class="card-img-top" height="150" style="object-fit: cover;" />
            <div class="card-body">
              <h5><%= doc.firstName %> <%= doc.lastName %></h5>
              <p><strong><%= doc.experience %> years</strong></p>
              <p><strong>Expertise:</strong> <%= doc.expertise %></p>
              <p><strong>Languages:</strong> English, Hindi</p>
              <a href="/doctor/edit/<%= doc._id %>" class="btn btn-info btn-sm w-100">View More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
